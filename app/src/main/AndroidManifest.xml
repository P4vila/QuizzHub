        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.QuizzHub"
        tools:targetApi="31">
        <activity
            android:name=".GameClientActivity"
            android:exported="true" />
        <activity
            android:name=".modo_de_juego"
            android:exported="true" /> <!-- Activities -->
        <activity
            android:name=".Sala_Online"
            android:exported="true" />
        <activity
            android:name=".Partida_Activity"
            android:exported="true" />
        <activity
            android:name=".Resultados_Activity"
            android:exported="true" />
        <activity
            android:name=".Perfil_Activity"
            android:exported="true" />
        <activity
            android:name=".Ranking_Activity"
            android:exported="true" />
        <activity
            android:name=".Ajustes_Activity"
            android:exported="true" />
        <activity
            android:name=".Categorias_Activity"
            android:exported="true" />
        <activity
            android:name=".Menu_Principal_Activity"
            android:exported="true"
            android:label="@string/title_activity_menu_principal" />
        <activity
            android:name=".Splash_Screen_Activity"
            android:exported="true" />
        <activity
            android:name=".Restablecer_NuevaContrasena_Activity"
            android:exported="true" />
        <activity
            android:name=".Restablecer_Codigo_Activity"
            android:exported="true" />
        <activity
            android:name=".Restablecer_Activity"
            android:exported="true" />
        <activity
            android:name=".Registro_Activity"
            android:exported="true" />
        <activity
            android:name=".Login_Activity"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
