<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:background="@color/Fondo_menu"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/Menu_nav"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu" />



    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="213dp"
        android:layout_height="205dp"
        app:layout_constraintBottom_toTopOf="@+id/nav_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.111"
        app:srcCompat="@drawable/logo_quizzhub" />

    <Button
        android:id="@+id/button_jugar"
        android:layout_width="280dp"
        android:layout_height="61dp"
        android:layout_marginTop="288dp"
        android:backgroundTint="@color/Boton_jugar"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/btn_jugar"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:cornerRadius="9dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_categorias"
        android:layout_width="280dp"
        android:layout_height="61dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/Boton_categorias"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/btn_categorÃ­as"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:cornerRadius="9dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_jugar" />

    <Button
        android:id="@+id/button_ajustes"
        android:layout_width="280dp"
        android:layout_height="61dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/Boton_ajustes"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/btn_ajustes"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:cornerRadius="9dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_categorias" />

    <Button
        android:id="@+id/button_salir"
        android:layout_width="280dp"
        android:layout_height="61dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/Boton_salir"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/btn_salir"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:cornerRadius="9dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_ajustes" />

    <View
        android:id="@+id/view"
        android:layout_width="90dp"
        android:layout_height="33dp"
        android:layout_marginBottom="692dp"
        android:alpha="0.8"
        android:background="@drawable/rounded_view_toolbar"
        app:layout_constraintBottom_toBottomOf="@+id/nav_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.914"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="32dp"
        android:layout_height="33dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/points_coin" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="51dp"
        android:layout_height="18dp"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="10dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/view" />


</androidx.constraintlayout.widget.ConstraintLayout>