<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoregistro">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:background="@color/toolbar_color"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:titleTextColor="@android:color/white" />

    <View
        android:id="@+id/viewmoneda"
        android:layout_width="90dp"
        android:layout_height="33dp"
        android:alpha="0.8"
        android:background="@drawable/rounded_view_toolbar"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar3"
        app:layout_constraintEnd_toEndOf="@+id/toolbar3"
        app:layout_constraintHorizontal_bias="0.947"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar3" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="32dp"
        android:layout_height="33dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/viewmoneda"
        app:layout_constraintEnd_toEndOf="@+id/viewmoneda"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/viewmoneda"
        app:layout_constraintTop_toTopOf="@+id/viewmoneda"
        app:srcCompat="@drawable/points_coin" />

    <TextView
        android:id="@+id/text_view_moneda"
        android:layout_width="51dp"
        android:layout_height="18dp"
        android:text="0 pts"
        android:textColor="@color/white"
        android:textSize="10dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/viewmoneda"
        app:layout_constraintEnd_toEndOf="@+id/viewmoneda"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/viewmoneda" />




    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/Menu_nav"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu" />

    <View
        android:id="@+id/view"
        android:layout_width="346dp"
        android:layout_height="232dp"
        android:alpha="0.8"
        android:background="@drawable/rounded_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.13" />


    <TextView
        android:id="@+id/textViewTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/roboto_bold"
        android:text="30"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar3"
        app:layout_constraintEnd_toStartOf="@+id/viewmoneda"
        app:layout_constraintTop_toTopOf="@+id/toolbar3"
        app:layout_constraintVertical_bias="0.487" />

    <TextView
        android:id="@+id/textViewPregunta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:text="Pregunta"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:maxLines="4"
        android:ellipsize="end"
        app:layout_constraintBottom_toTopOf="@id/btnOpcion1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.437" />




    <Button
        android:id="@+id/btnOpcion1"
        android:layout_width="342dp"
        android:layout_height="68dp"
        android:backgroundTint="@color/boton_geografia"
        android:fontFamily="@font/roboto_bold"
        android:text="Opci贸n 1"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:cornerRadius="9dp"
        app:layout_constraintBottom_toTopOf="@+id/btnOpcion2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <Button
        android:id="@+id/btnOpcion2"
        android:layout_width="342dp"
        android:layout_height="68dp"
        android:backgroundTint="@color/boton_geografia"
        android:fontFamily="@font/roboto_bold"
        android:text="Opci贸n 2"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:cornerRadius="9dp"
        app:layout_constraintBottom_toTopOf="@+id/btnOpcion3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar3"
        app:layout_constraintVertical_bias="0.953" />

    <Button
        android:id="@+id/btnOpcion3"
        android:layout_width="342dp"
        android:layout_height="68dp"
        android:backgroundTint="@color/boton_geografia"
        android:fontFamily="@font/roboto_bold"
        android:text="Opci贸n 3"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:cornerRadius="9dp"
        app:layout_constraintBottom_toTopOf="@+id/nav_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <Button
        android:id="@+id/btnOpcion4"
        android:layout_width="342dp"
        android:layout_height="68dp"
        android:backgroundTint="@color/boton_geografia"
        android:fontFamily="@font/roboto_bold"
        android:text="Opci贸n 4"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:cornerRadius="9dp"
        app:layout_constraintBottom_toBottomOf="@+id/nav_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnOpcion3"
        app:layout_constraintVertical_bias="0.147" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="38dp"
        android:layout_height="35dp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar3"
        app:layout_constraintEnd_toStartOf="@+id/textViewTimer"
        app:layout_constraintHorizontal_bias="0.944"
        app:layout_constraintStart_toStartOf="@+id/toolbar3"
        app:layout_constraintTop_toTopOf="@+id/toolbar3"
        app:layout_constraintVertical_bias="0.527"
        app:srcCompat="@drawable/timer" />
</androidx.constraintlayout.widget.ConstraintLayout>
